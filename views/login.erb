<div class="w-full max-w-md p-6">
    <div class="ui-card p-6 md:p-10">
        <div class="text-center mb-10">
            <h1 class="text-2xl font-black tracking-tight uppercase text-[var(--primary)]">Acceso</h1>
            <p class="text-[9px] font-bold text-[var(--text-muted)] uppercase tracking-[0.25em] mt-1">
                Portal de Gestión Segura
            </p>
        </div>


        <form action="/login" method="POST" class="space-y-4">
            <div class="input-group">
                <label>Usuario de acceso</label>
                <input type="text" name="username" required class="input-control" autofocus>
            </div>
            
            <div class="input-group">
                <label>Contraseña</label>
                <input type="password" name="password" required class="input-control" placeholder="••••••••">
            </div>

            <% if @error %>
                <div class="text-[var(--error)] text-[10px] font-bold text-center min-h-[24px] uppercase tracking-wider">
                    <%= @error %>
                </div>
            <% end %>

            <button type="submit" class="btn-main w-full py-4 mt-4 text-sm tracking-widest">
                INGRESAR AL SISTEMA
            </button>
        </form>
    </div>
    
    <p class="text-center text-[9px] text-[var(--text-muted)] mt-8 uppercase tracking-[0.4em] opacity-40">
        Nutrigesica • 2026
    </p>
</div>